<Window x:Class="pot_sem2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pot_sem2"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <TextBlock>IP: </TextBlock>
            <TextBox>localhost</TextBox>
            <TextBlock> Port: </TextBlock>
            <TextBox>8123</TextBox>
            <Button>Connect</Button>
            <Button>Host</Button>
            <TextBlock>Status: </TextBlock>
            <TextBlock>Waiting for your action</TextBlock>
        </WrapPanel>
        <local:GameStateVisualiser Grid.Row="1" Grid.Column="0"  x:Name="Visualiser"  />
        <Button Grid.Row="1" Grid.Column="1" Click="Refresh_Click">Dont click me</Button>
    </Grid>
</Window>
